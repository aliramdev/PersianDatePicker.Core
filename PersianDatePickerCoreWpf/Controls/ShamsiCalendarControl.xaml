<UserControl
    x:Class="PersianDatePicker_Core_Wpf.Controls.ShamsiCalendarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PersianDatePicker_Core_Wpf.Controls"
    x:Name="Root"
    Width="300"
    Height="auto">

    <UserControl.Resources>
        <SolidColorBrush x:Key="CalendarBackground" Color="White" />
        <SolidColorBrush x:Key="CalendarBorderBrush" Color="#DDD" />
        <SolidColorBrush x:Key="CalendarHeaderBackground" Color="#F0F0F0" />
        <SolidColorBrush x:Key="CalendarDayHighlight" Color="#1083FF" />
        <SolidColorBrush x:Key="TodayBackground" Color="#C0E6FF" />

        <!--  استایل پیش‌فرض دکمه روز  -->
        <Style x:Key="DefaultDayButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0F7FA" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B2EBF2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border
        Background="{StaticResource CalendarBackground}"
        BorderBrush="{StaticResource CalendarBorderBrush}"
        BorderThickness="1"
        CornerRadius="6">
        <StackPanel>
            <!--  ناوبری ماه  -->
            <Border Padding="8" Background="{StaticResource CalendarHeaderBackground}">
                <DockPanel>
                    <Button
                        x:Name="PrevMonthBtn"
                        Width="30"
                        Height="30"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0">
                        <Path
                            Width="16"
                            Height="16"
                            Data="M 10,0 L 0,8 L 10,16 Z"
                            Fill="Black"
                            Stretch="Uniform" />
                    </Button>
                    <TextBlock
                        x:Name="MonthYearText"
                        Margin="10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Black" />
                    <Button
                        x:Name="NextMonthBtn"
                        Width="30"
                        Height="30"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0">
                        <Path
                            Width="16"
                            Height="16"
                            Data="M 0,0 L 10,8 L 0,16 Z"
                            Fill="Black"
                            Stretch="Uniform" />
                    </Button>
                    <Button
                        x:Name="SwitchViewButton"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Viewbox Width="12" Height="12">
                            <Path Data="M 0,0 L 10,0 L 5,6 Z" Fill="Black" />
                        </Viewbox>
                    </Button>
                </DockPanel>
            </Border>

            <!--  روزهای هفته  -->
            <UniformGrid Margin="0,5,0,5" Columns="7">
                <TextBlock
                    FontWeight="SemiBold"
                    Text="ش"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="ی"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="د"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="س"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="چ"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="پ"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="ج"
                    TextAlignment="Center" />
            </UniformGrid>

            <!--  روزهای ماه  -->
            <UniformGrid
                x:Name="DaysGrid"
                Margin="4"
                Columns="7" />

            <!--  دکمه‌های امروز و پاک‌کردن  -->
            <DockPanel Margin="8,4,8,4" LastChildFill="False">
                <Button
                    x:Name="ClearButton"
                    Width="30"
                    Height="30"
                    Background="#D32F2F"
                    BorderBrush="#C2185B"
                    BorderThickness="1"
                    Content="✕"
                    Cursor="Hand"
                    DockPanel.Dock="Left"
                    Foreground="White"
                    ToolTip="پاک‌کردن تاریخ" />
                <Button
                    x:Name="TodayButton"
                    Width="70"
                    Height="30"
                    Content="امروز"
                    DockPanel.Dock="Right" />
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
