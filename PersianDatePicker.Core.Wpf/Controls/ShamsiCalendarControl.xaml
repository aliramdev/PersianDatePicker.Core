<UserControl
    x:Class="PersianDatePicker_Core_Wpf.Controls.ShamsiCalendarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PersianDatePicker_Core_Wpf.Controls"
    x:Name="Root"
    Width="300"
    Height="330">

    <UserControl.Resources>
        <SolidColorBrush x:Key="CalendarBackground" Color="White" />
        <SolidColorBrush x:Key="CalendarBorderBrush" Color="#DDD" />
        <SolidColorBrush x:Key="CalendarHeaderBackground" Color="#F0F0F0" />
        <SolidColorBrush x:Key="CalendarDayHighlight" Color="#1083FF" />
        <SolidColorBrush x:Key="TodayBackground" Color="#C0E6FF" />
    </UserControl.Resources>

    <Border
        Background="{StaticResource CalendarBackground}"
        BorderBrush="{StaticResource CalendarBorderBrush}"
        BorderThickness="1"
        CornerRadius="6">
        <StackPanel>
            <!--  ناوبری ماه  -->
            <Border Padding="8" Background="{StaticResource CalendarHeaderBackground}">
                <DockPanel>
                    <Button
                        x:Name="PrevMonthBtn"
                        Width="30"
                        Height="30"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0">
                        <Path
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 10,0 L 0,8 L 10,16 Z"
                            Fill="Black"
                            Stretch="Uniform" />
                    </Button>

                    <TextBlock
                        x:Name="MonthYearText"
                        Margin="10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        DockPanel.Dock="Right"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="Black" />

                    <Button
                        x:Name="NextMonthBtn"
                        Width="30"
                        Height="30"
                        Margin="2"
                        Background="Transparent"
                        BorderThickness="0">
                        <Path
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 0,0 L 10,8 L 0,16 Z"
                            Fill="Black"
                            Stretch="Uniform" />
                    </Button>

                    <!--  دکمه تغییر نمایش  -->
                    <Button
                        x:Name="SwitchViewButton"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                        <Viewbox
                            Width="12"
                            Height="12"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Stretch="Uniform">
                            <Path Data="M 0,0 L 10,0 L 5,6 Z" Fill="Black" />
                        </Viewbox>
                    </Button>

                </DockPanel>
            </Border>


            <!--  روزهای هفته  -->
            <UniformGrid Margin="0,5,0,5" Columns="7">
                <TextBlock
                    FontWeight="SemiBold"
                    Text="ش"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="ی"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="د"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="س"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="چ"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="پ"
                    TextAlignment="Center" />
                <TextBlock
                    FontWeight="SemiBold"
                    Text="ج"
                    TextAlignment="Center" />
            </UniformGrid>

            <!--  روزهای ماه  -->
            <UniformGrid
                x:Name="DaysGrid"
                Margin="4"
                Columns="7" />

            <!--  دکمه‌های امروز و پاک‌کردن  -->
            <DockPanel Margin="8,4,8,4" LastChildFill="False">
                <Button
                    x:Name="ClearButton"
                    Width="30"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Content="✕"
                    Cursor="Hand"
                    DockPanel.Dock="Left"
                    ToolTip="پاک‌کردن تاریخ" />

                <Button
                    x:Name="TodayButton"
                    Width="70"
                    Height="30"
                    Content="امروز"
                    DockPanel.Dock="Right" />
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
